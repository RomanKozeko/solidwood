<%= link_to product_path(product), class: "card productCard" do %>
    <div class="card-image">
    <figure class="image is-square">
      <% if product.image.attached? %>
        <%= image_tag product.image.service_url, alt: product.name %>
      <%else %>
        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        <% end %>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4"><%= product.name %></p>
        <p class="subtitle is-6">от <%= number_to_currency product.price, locale: :by %> / <span>м<sup><small>3</small></sup></span></p>
      </div>
    </div>
  </div>
<% end %>