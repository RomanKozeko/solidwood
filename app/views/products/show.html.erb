<% description @product_type.description %>
<% title @product_type.name%>

<div class="container">
  <br>
  <br>
  <h1 class="title">Продукция</h1>
</div>
<hr />
<div class="container" style="overflow: auto">
  <div class="columns">
    <div class="column is-one-quarter">
      <figure class="image is-square">
        <% if @product_type.image.attached? %>
          <%= image_tag @product_type.image.service_url, alt: @product_type.name %>
        <%else %>
          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        <% end %>
      </figure>
    </div>
    <div class="column">
      <h3 class="title is-5">
        <%= @product_type.name %>
      </h3>
      <p>
        <%= raw(@product_type.description) %>
      </p>
    </div>
  </div>
  <% if @product_type.products.length > 0 %>
    <%= render 'partials/products_table', products: @product_type.products, order_item: @order_item %>
  <% end %>

  <div class="spacer-small"></div>
</div>